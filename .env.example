# === ✅ TradingView Webhook Authentication (v1 + v2) ===
WEBHOOK_PASSPHRASE=your_tradingview_webhook_passphrase
# v2 requires a strong passphrase (>=16 chars)
WEBHOOK_PASSPHRASE_V2=your_strong_v2_passphrase_at_least_16_chars
# Optional header token for v2 requests (sent in X-Auth or X-Webhook-Token)
WEBHOOK_HEADER_TOKEN_V2=
# Optional path token; if set, the v2 route becomes: /v2/<token>/tradingview-to-webhook-order
WEBHOOK_PATH_TOKEN=

# === ✅ Supabase Configuration ===
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_API_KEY=your_supabase_anon_key

# === ✅ Alpaca API Credentials (multi-account aliases) ===
# Default credentials (backward compatible with v1)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
USE_PAPER=true
# Alias-specific overrides (examples)
# ALPACA_KEY_ID__paper=your_alpaca_paper_key
# ALPACA_SECRET_KEY__paper=your_alpaca_paper_secret
# ALPACA_BASE_URL__paper=https://paper-api.alpaca.markets
# ALPACA_KEY_ID__live=your_alpaca_live_key
# ALPACA_SECRET_KEY__live=your_alpaca_live_secret
# ALPACA_BASE_URL__live=https://api.alpaca.markets

# === ✅ Discord Webhook Logging ===
DISCORD_LOGS_URL=https://discord.com/api/webhooks/your-logs-webhook
DISCORD_ERR_URL=https://discord.com/api/webhooks/your-error-webhook
DISCORD_AVATAR_URL=https://link.to/avatar-image.png

# === ✅ Discord for Study Alert Webhook (Optional) ===
DISCORD_STUDY_URL=https://discord.com/api/webhooks/your-study-webhook
DISCORD_STUDY_AVATAR_URL=https://link.to/study-avatar.png

# === ✅ Worker (kick endpoint) ===
# If worker and app share the same service, WORKER_URL can be your app's base URL
WORKER_URL=https://your-app.onrender.com
WORKER_SECRET=your_strong_worker_secret

# === ✅ Trading Mode ===
# Controls paper/live guard in worker (defaults to paper)
TRADING_MODE=paper
